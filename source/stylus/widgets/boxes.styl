// Base Box Widget
.box-widget
	display block
	clear both
	padding 0
	border 1px theme_border solid
	background-color theme_base
	border-radius 2px
	margin-bottom 20px
	transition all .3s ease-in-out

	.box-header
		position relative
		clearfix()
		background-color theme_widget
		border-bottom 1px theme_border solid
		.title
			display block
			float left
			color theme_widget_font
			.header-icon, .header-title
				padding 9px 10px 5px 10px
				font-size 20px
				font-family baseFont
				display inline-block
			.header-icon
				font-size 18px
				width 40px
				height 40px
				text-align center
				box-sizing border-box

			.header-title 	
				padding-left 0
				text-transform uppercase
				
		
		ul.box-options
			absolute top right
			display block
			list-style none
			margin 0px 5px 0 0
			padding 0 
			clearfix()
			> li
				display block
				float left
				opacity 0
				color lighten(theme_widget_font, 30%)
				padding 10px 10px 8px 10px
				margin-top 0
				cursor pointer
				border-top 4px transparent solid
				transition all .2s ease-out
				&:hover, &:active
					margin-top -4px
					padding-top 14px
					border-color color_base
					color theme_widget_font
				&:active
					color color_base
					background-color rgba(#000, 0.1)
			&:hover
				> li
					opacity 1
	&:hover
		border-top-color color_base
		theme-box-shadow()
		.title
			color color_base
		ul.box-options > li:last-child
			opacity 1					


	

	.box-body
		padding 15px
		background-color theme_base
		> pre
			border-radius 0
			border-color theme_border
			border-width 1px 0 1px 0
			margin-left -15px
			margin-right -15px


/*! Frameless box widget
 *  Removes backgrounds and borders to
 *  merge with background
 */
.box-widget.box-frameless
	border 0
	box-shadow none
	background-color theme_base
	margin 0
	.box-header, .box-body, .box-footer
		padding-left 0
		padding-right 0
	.box-header
		border-bottom none
	.box-body
		padding-top 0
	



// Box-widget automatically spans to full height
// Adds a scrollbar to .box-body 
.box-widget.box-full-height
	.box-body
		overflow-x hidden
		overflow-y scroll
		height 450px
		background-color theme_base
		box-shadow inset 0px 3px 6px 0px rgba(#000, 0.1)




// Boxes color variation

.box-widget.box-color-base
	background-color color_base
	border-color darken(color_base, 10%)
	.box-header
		border-color rgba(#fff, 0.4)
		background-color color_base
		color #fff
		.title
			color #fff
		ul.box-options
			> li
				color #fff
			&:hover
				color #fff
				theme-text-shadow()
				box-shadow -30px 0 15px -10px color_base
	.box-body
		border-color darken(color_base, 10%)
		color #fff 
		p, span , ul, li 
			color #fff



for _color in colors_array
	.box-widget.box-color-{_color[0]}
		background-color _color[1]
		border-color darken(_color[1], 10%)
		.box-header
			border-color rgba(#fff, 0.4)
			background-color _color[1]
			color #fff
			.title 
				color #fff
			ul.box-options
				> li
					color #fff
					background-color _color[1]
					border-top-color transparent
					&:hover
						border-color _color[1]
				&:hover
					box-shadow -30px 0 15px -10px _color[1]
		.box-body
			border-color darken(_color[1], 10%)
			color #fff
			p, span , ul, li 
				color #fff 
		&:hover
			.box-header .title
				color #fff
				theme-text-shadow()
			